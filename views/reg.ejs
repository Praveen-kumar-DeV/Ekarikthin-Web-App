<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

    <title>Register</title>
    
</head>
<body>
    <section id="background" >
        <div class="container" id="blur">
          <form >
            
            <div class="step step-1 active">
              <legend>Personal Details</legend>
            <div class="form-group ">
              <label for="Email">Name</label>
              <input type="text" id="firstName" name="name" >
     
            </div>
            <div class="form-group">
              <label for="Email">Email</label>
              <input type="text" id="email" name="email" >
            </div>
            <div class="form-group">
              <label for="college">College</label>
              <input type="text" id="college" name="college">
            </div>
            <div class="form-group">
              <label for="lastName">Phone Number</label>
              <input type="tel" id="phone" name="phone" >
            </div>
            <button type="button" class="next-btn">Next</button>
          </div>
      
            <div class="step step-2">
                <legend>Event Details</legend>
              <div class="form-group">
                <label for="Category">Category</label>
                <select type="text" id="category" name="category" >
                  <option value="" selected >Please select category</option>
                  <option >Cultural</option>
                  <option>Technical</option>
                  <option>Esports</option>
                  <option>Sports</option>
                  <option>Mini Events </option>
                   </select> 
              </div>
              <div class="form-group">
                <label for="Event">Event</label>
                <select id="Event" name="event">
                  <option value="" selected >Please select category first</option>
                  
              </select>
              <input hidden id="code" name="eventCode" >
               
            
              </div>
              <div class="form-group">
                <label for="Cost">Cost</label>
                <input  id="cost" name="cost"  >
              </div>
              <div class="form-group">
                <label for="Category">Payment Mode</label>
                <select type="text" id="paymode" name="paymentMode">
                    <option value="AtVenue">At Venue</option>
                    <option value="Online"> Online</option>
                </select> 
              </div>
              <button type="button" class="previous-btn">Prev</button>
              <button type="button" class="next-btn">Next</button>
              
              
            </div>

            
      
            <div class="step step-3">
                <legend id="motp"></legend>
              <div class="form-group">
                <label for="postCode">OTP</label>
                <input type="number" id="otp" name="otp">
              </div>
             <!-- <button type="button" class="previous-btn">Prev</button>-->
              <button type="submit" class="submit-btn">Submit</button>
            </div>
      
          </form>
        </div>
      </section>
      <div id="confirm"></div>
     
  


    
</body>
<script type="module" src="main.js" ></script>
<script src="drop.js" type="module" async></script>

</html>